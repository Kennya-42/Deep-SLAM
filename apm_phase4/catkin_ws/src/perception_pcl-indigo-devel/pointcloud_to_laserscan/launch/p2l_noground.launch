<?xml version="1.0"?>

<launch>
<!-- Launch the pointcloud to laser scan node 
       Reference:  http://wiki.ros.org/pointcloud_to_laserscan -->
 <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="p2l_node" respawn="false">
   <param name="min_height" value="0.0" />
   <param name="max_height" value="3.0" />
   <!-- full circle would be -pi to pi -->
   <param name="angle_min" value="-1.45" />
   <param name="angle_max" value="1.45" />
  <!--  <param name="angle_increment" value="1.57/20" /> -->
   <param name="scan_time" value="0.0" />
   <param name="range_min" value="2.0" />
   <param name="range_max" value="100.0" />
   <param name="target_frame" value="base_link" />
   <param name="concurrency_level" value="1" />
   <!--<param name="use_inf" value="1.0" />-->
   <remap from="cloud_in" to="ground_object_cloud"/>
   <remap from="scan" to="laser"/>
 </node>
</launch>
